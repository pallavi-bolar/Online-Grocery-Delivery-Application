<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="com.fasterxml.jackson.databind" level="DEBUG" />
  
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
